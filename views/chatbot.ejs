<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Illustrator & Veo Animator</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        /* --- GLOBAL LAYOUT & BACKGROUND --- */
        body { 
            margin: 0; padding: 0; 
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif; 
            height: 100vh; 
            display: flex; 
            flex-direction: column; /* Stack Navbar on top of Content */
            overflow: hidden; 
            
            /* Parallax Background Applied to Body */
            background: url('/images/k.jpg') no-repeat center center fixed; 
            background-size: cover;
            position: relative;
        }

        /* Dark Overlay to improve text readability */
        body::before {
            content: "";
            position: absolute;
            top: 0; left: 0;
            width: 100%; height: 100%;
            background: rgba(0, 0, 0, 0.6); /* 60% Dark Overlay */
            z-index: 0;
            pointer-events: none;
        }

        /* --- NAVBAR --- */
        /* Ensure navbar sits above the overlay */
        nav { position: relative; z-index: 10; flex: 0 0 auto; }
        .navbar-custom { background-color: #eef6ff; padding: 15px 20px; }
        .navbar-brand { font-size: 1.5rem; font-weight: bold; color: black !important; }
        .nav-link { font-weight: bold; color: black !important; }

        /* --- MAIN SPLIT LAYOUT --- */
        .content-wrapper {
            display: flex;
            flex: 1 1 auto; /* Fill remaining height */
            overflow: hidden; /* Prevent body scroll, handle inside panels */
            position: relative;
            z-index: 1; 
            width: 100%;
        }

        /* --- LEFT PANEL (Gallery) --- */
        .left-panel { 
            flex: 1; 
            padding: 40px; 
            display: flex; 
            flex-direction: column; 
            align-items: center; 
            justify-content: flex-start; 
            
            /* Transparent background so cards float on the image */
            background: transparent; 
            overflow-y: auto; 
        }

        /* --- RIGHT PANEL (Chatbot Section) --- */
        .right-panel { 
            width: 450px; /* Fixed width for chatbot */
            height: 100%;
            
            /* Glassmorphism Effect: Distinct section but blends with bg */
            background-color: rgba(255, 255, 255, 0.9); 
            backdrop-filter: blur(10px);
            border-left: 1px solid rgba(255, 255, 255, 0.3);
            
            display: flex;
            flex-direction: column;
            box-shadow: -5px 0 25px rgba(0,0,0,0.2); 
        }

        #botpress-webchat { width: 100%; height: 100%; border: none; }

        /* --- TEXT STYLES (Updated for Dark Background) --- */
        .container-box { width: 100%; max-width: 800px; text-align: center; }
        /* White text with shadow for visibility on bg image */
        h1 { color: #ffffff; margin: 0 0 10px 0; font-size: 2.5rem; text-shadow: 0 2px 4px rgba(0,0,0,0.5); }
        .subtitle { color: #e0e0e0; margin-bottom: 40px; font-size: 1.1rem; text-shadow: 0 1px 2px rgba(0,0,0,0.5); }
        #gallery-container { width: 100%; display: flex; flex-direction: column; gap: 30px; padding-bottom: 40px; }

        /* --- CARD STYLES --- */
        .output-card { 
            background: rgba(255, 255, 255, 0.98); /* Solid white cards */
            border-radius: 16px; 
            box-shadow: 0 10px 40px rgba(0,0,0,0.2); 
            border: none; 
            padding: 0; 
            overflow: hidden; 
            animation: fadeIn 0.5s ease-out; 
            text-align: left; 
        }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
        
        .prompt-section { padding: 20px 30px; background-color: #f8f9fa; border-bottom: 1px solid #eee; }
        .prompt-label { text-transform: uppercase; font-size: 0.75rem; color: #888; font-weight: 700; letter-spacing: 1px; margin-bottom: 5px; display: block; }
        .image-section { padding: 30px; min-height: 300px; display: flex; flex-direction: column; align-items: center; justify-content: center; background-color: #fff; position: relative; }
        .image-pair { display: flex; gap: 16px; align-items: flex-start; width: 100%; }
        .image-pair .image-wrap { flex: 1; }
        .image-pair .image-wrap img { width: 100%; height: auto; display: block; }
        .recreate-wrap { flex: 1; display: flex; align-items: center; justify-content: center; }
        .generated-image { max-width: 100%; border-radius: 8px; box-shadow: 0 4px 20px rgba(0,0,0,0.1); display: none; }

        /* --- CONTROLS --- */
        .controls-container { width: 100%; text-align: center; margin-top: 20px; display: none; padding-top: 10px; gap: 10px; justify-content: center; flex-wrap: wrap; }
        .dual-input-wrapper { width: 100%; display: flex; flex-direction: column; gap: 8px; margin-bottom: 15px; text-align: left; }
        .input-row { display: flex; align-items: flex-start; gap: 10px; padding: 8px; border: 1px solid #eee; border-radius: 6px; transition: background 0.2s; }
        .input-row:focus-within { border-color: #007bff; background-color: #f0f7ff; }
        .radio-select { cursor: pointer; transform: scale(1.2); margin-top: 12px; }
        
        .anim-input { 
            flex: 1; padding: 12px; border: 1px solid #ddd; border-radius: 4px; font-size: 0.95rem; font-family: inherit;
            min-height: 120px; resize: vertical; line-height: 1.5; width: 100%; box-sizing: border-box; 
        }
        
        .btn { padding: 10px 20px; font-size: 0.9rem; cursor: pointer; border: none; border-radius: 8px; transition: background 0.2s, transform 0.1s; display: inline-flex; align-items: center; gap: 8px; font-weight: 600; text-decoration: none; }
        .btn:active { transform: scale(0.98); }
        .btn-animate { background-color: #222; color: #fff; }
        .btn-animate:hover { background-color: #444; }
        .btn-download { background-color: #007bff; color: white; }
        .btn-download:hover { background-color: #0056b3; }

        .video-result-area { width: 100%; margin-top: 20px; display: none; border-top: 1px dashed #eee; padding-top: 20px; text-align: center; }
        .generated-video { width: 100%; border-radius: 8px; border: 2px solid #222; background: #000; }
        .loader { border: 4px solid #f3f3f3; border-top: 4px solid #3498db; border-radius: 50%; width: 40px; height: 40px; animation: spin 1s linear infinite; margin-bottom: 15px; }
        @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
        .status-text { color: #888; font-size: 0.9rem; margin-top: 10px; }

        .toast-notification { position: fixed; top: 80px; left: 50%; transform: translateX(-50%); background-color: #28a745; color: white; padding: 12px 24px; border-radius: 50px; box-shadow: 0 5px 15px rgba(0,0,0,0.2); font-size: 0.95rem; font-weight: 600; z-index: 10000; display: flex; align-items: center; gap: 10px; animation: slideDown 0.4s ease-out; }
        @keyframes slideDown { from { top: 0px; opacity: 0; } to { top: 80px; opacity: 1; } }
    </style>
</head>
<body>

    <%- include('partials/navbar.ejs') %>

    <div class="content-wrapper">
        
        <div class="left-panel">
            <div class="container-box">
                <h1>AI Illustrator</h1>
                <p class="subtitle">Chat with the bot to describe and generate a scene.</p>
                <div id="gallery-container"></div>
            </div>
        </div>

        <div class="right-panel">
            <div id="botpress-webchat"></div>
        </div>

    </div>

    <script src="https://cdn.botpress.cloud/webchat/v3.5/inject.js"></script>
    <script src="https://files.bpcontent.cloud/2025/12/29/15/20251229152652-F9FIL533.js" defer></script>
    
    <script>
        // --- CONFIGURATION ---
        const API_KEY = 'pk_lnrIOAw4t3X8Nc5E'; 

        // --- TOAST HELPER ---
        function showToast(message) {
            const toast = document.createElement('div');
            toast.className = 'toast-notification';
            toast.innerHTML = `<span>‚úÖ</span> <span>${message}</span>`;
            document.body.appendChild(toast);
            setTimeout(() => {
                toast.style.opacity = "0";
                setTimeout(() => { if(document.body.contains(toast)) document.body.removeChild(toast); }, 500);
            }, 3500);
        }

        // --- IMAGE API ---
        async function generateImageBlob(prompt) {
            let cleanApiPrompt = prompt.replace(/--[a-z]+\s+[0-9:.]+/gi, '').trim();
            const encodedPrompt = encodeURIComponent(cleanApiPrompt);
            const seed = Math.floor(Math.random() * 10000000);
            const url = `https://gen.pollinations.ai/image/${encodedPrompt}?width=1024&height=768&nologo=true&seed=${seed}&model=flux`;
            
            const response = await fetch(url, { method: 'GET', headers: { 'Authorization': `Bearer ${API_KEY}`, 'Accept': '*/*' } });
            if (!response.ok) throw new Error(`API Error ${response.status}`);
            const blob = await response.blob();
            return URL.createObjectURL(blob);
        }

        // --- TOGGLE EDIT ---
        function toggleEdit(id) {
            const el = document.getElementById(`prompt-${id}`);
            const btn = document.getElementById(`edit-btn-${id}`);
            const isEditable = el.getAttribute('contenteditable') === 'true';

            if (isEditable) {
                el.setAttribute('contenteditable', 'false');
                el.style.backgroundColor = 'transparent'; el.style.border = '1px solid transparent'; el.style.padding = '0';
                btn.innerText = '‚úèÔ∏è Edit';
                const manualInput = document.getElementById(`vid-prompt-manual-${id}`);
                if (manualInput) manualInput.value = el.innerText;
                document.getElementById(`btn-recreate-${id}`).style.display = 'inline-flex';
            } else {
                el.setAttribute('contenteditable', 'true');
                el.style.backgroundColor = '#ffffff'; el.style.border = '1px solid #007bff'; el.style.borderRadius = '4px'; el.style.padding = '8px';
                el.focus();
                btn.innerText = 'üíæ Save';
            }
        }

        // --- RECREATE IMAGE ---
        async function recreateImage(id) {
            const manualInput = document.getElementById(`vid-prompt-manual-${id}`);
            const promptText = manualInput ? manualInput.value : document.getElementById(`prompt-${id}`).innerText;
            const recreateWrap = document.getElementById(`recreate-wrap-${id}`);
            
            recreateWrap.innerHTML = '<div class="loader"></div>';
            recreateWrap.style.display = 'flex';

            try {
                const objectUrl = await generateImageBlob(promptText);
                const newImg = document.createElement('img');
                newImg.className = 'generated-image'; newImg.style.display = 'block'; newImg.crossOrigin = 'anonymous'; newImg.src = objectUrl;
                recreateWrap.innerHTML = ''; recreateWrap.appendChild(newImg);
            } catch (error) {
                recreateWrap.innerHTML = '<p class="status-text" style="color:red">Failed</p>';
            }
        }

        // --- CREATE CARD ---
        function createAndGenerateCard(promptText, panelNumber = null) {
            const container = document.getElementById('gallery-container');
            const card = document.createElement('div');
            card.className = 'output-card';
            const uniqueId = Math.random().toString(36).substr(2, 9);
            const labelStr = panelNumber ? `Story Panel ${panelNumber}` : "Generated Scene";

            card.innerHTML = `
                <div class="prompt-section">
                    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px;">
                        <span class="prompt-label" style="margin:0">${labelStr}</span>
                        <span id="edit-btn-${uniqueId}" onclick="toggleEdit('${uniqueId}')" style="cursor: pointer; font-size: 0.8rem; color: #007bff; font-weight: 600;">‚úèÔ∏è Edit</span>
                    </div>
                    <p class="prompt-text" id="prompt-${uniqueId}" style="border: 1px solid transparent; transition: all 0.2s;">${promptText}</p>
                </div>
                <div class="image-section">
                    <div class="image-pair" id="image-pair-${uniqueId}">
                        <div class="image-wrap">
                            <div id="loader-${uniqueId}" class="loader"></div>
                            <p id="msg-${uniqueId}" class="status-text">Generating image...</p>
                            <img id="img-${uniqueId}" class="generated-image" crossorigin="anonymous" alt="AI Generated Result">
                        </div>
                        <div class="recreate-wrap" id="recreate-wrap-${uniqueId}" style="display:none"></div>
                    </div>
                    
                    <div id="controls-${uniqueId}" class="controls-container">
                        <div class="dual-input-wrapper">
                            <label class="prompt-label" style="font-size: 0.7rem;">Select Video Prompt Source:</label>
                            
                            <div class="input-row" onclick="document.getElementById('radio-manual-${uniqueId}').checked = true">
                                <input type="radio" id="radio-manual-${uniqueId}" name="prompt-choice-${uniqueId}" value="manual" class="radio-select" checked>
                                <div style="width:100%">
                                    <label for="radio-manual-${uniqueId}" style="font-size: 0.75rem; color:#666; display:block; margin-bottom: 4px;">Manual / Original</label>
                                    <textarea id="vid-prompt-manual-${uniqueId}" class="anim-input">${promptText}</textarea>
                                </div>
                            </div>

                            <div class="input-row" onclick="document.getElementById('radio-bot-${uniqueId}').checked = true">
                                <input type="radio" id="radio-bot-${uniqueId}" name="prompt-choice-${uniqueId}" value="bot" class="radio-select">
                                <div style="width:100%">
                                    <label for="radio-bot-${uniqueId}" style="font-size: 0.75rem; color:#007bff; font-weight:bold; display:block; margin-bottom: 4px;">Chat Generated</label>
                                    <textarea id="vid-prompt-bot-${uniqueId}" class="anim-input" style="border-color: #cce5ff; background: #fdfdfe;">${promptText}</textarea>
                                </div>
                            </div>
                        </div>

                        <button id="btn-anim-${uniqueId}" class="btn btn-animate" onclick="requestVideoGeneration('${uniqueId}')"><span>üé• Animate</span></button>
                        <button id="btn-dl-${uniqueId}" class="btn btn-download"><span>‚¨áÔ∏è Download Image</span></button>
                        <button id="btn-recreate-${uniqueId}" class="btn" style="display:none; background:#17a2b8; color:#fff;"><span>üîÅ Recreate</span></button>
                    </div>

                    <div id="vid-area-${uniqueId}" class="video-result-area">
                        <p id="vid-msg-${uniqueId}" class="status-text">Creating video with Veo... (approx 30s)</p>
                        <video id="vid-${uniqueId}" class="generated-video" controls playsinline loops style="display:none"></video>
                    </div>
                </div>`;
            container.appendChild(card);
            card.scrollIntoView({ behavior: 'smooth', block: 'end' });
            loadImageForCard(promptText, uniqueId);
            const recreateBtnEl = document.getElementById(`btn-recreate-${uniqueId}`);
            if (recreateBtnEl) recreateBtnEl.onclick = function() { recreateImage(uniqueId); };
        }

        // --- LOAD IMAGE ---
        async function loadImageForCard(prompt, id) {
            const imgElement = document.getElementById(`img-${id}`);
            const loader = document.getElementById(`loader-${id}`);
            const msg = document.getElementById(`msg-${id}`);
            const controls = document.getElementById(`controls-${id}`);
            const dlBtn = document.getElementById(`btn-dl-${id}`);
            try {
                const objectUrl = await generateImageBlob(prompt);
                imgElement.src = objectUrl;
                loader.style.display = 'none'; msg.style.display = 'none'; imgElement.style.display = 'block'; controls.style.display = 'flex';
                dlBtn.onclick = function() { downloadImage(objectUrl, `panel_image_${id}.jpg`); };
            } catch (error) {
                loader.style.display = 'none'; msg.innerText = "‚ùå Generation Failed: " + error.message; msg.style.color = "red";
            }
        }

        // --- DOWNLOAD HELPER ---
        async function downloadImage(url, filename) {
            try {
                const response = await fetch(url);
                const blob = await response.blob();
                const link = document.createElement("a");
                link.href = URL.createObjectURL(blob); link.download = filename;
                document.body.appendChild(link); link.click(); document.body.removeChild(link);
            } catch (err) { alert("Right-click and 'Save Image As' to download manually."); }
        }

        // --- ANIMATE ---
        async function requestVideoGeneration(id) {
            const imgElement = document.getElementById(`img-${id}`);
            const btnAnim = document.getElementById(`btn-anim-${id}`);
            const btnDl = document.getElementById(`btn-dl-${id}`);
            const vidArea = document.getElementById(`vid-area-${id}`);
            const vidMsg = document.getElementById(`vid-msg-${id}`);
            const vidPlayer = document.getElementById(`vid-${id}`);

            const manualRadio = document.getElementById(`radio-manual-${id}`);
            const manualInput = document.getElementById(`vid-prompt-manual-${id}`);
            const botInput = document.getElementById(`vid-prompt-bot-${id}`);
            
            let promptText = "";
            if (manualRadio && manualRadio.checked) {
                promptText = manualInput.value;
            } else {
                promptText = (botInput && botInput.value) ? botInput.value : manualInput.value;
            }

            btnAnim.style.display = 'none'; btnDl.style.display = 'none'; vidArea.style.display = 'block'; vidMsg.style.display = 'block';
            vidMsg.innerText = `Generating video for: "${promptText}"...`;

            try {
                const imageResponse = await fetch(imgElement.src);
                const imageBlob = await imageResponse.blob();
                const reader = new FileReader();
                reader.readAsDataURL(imageBlob); 
                
                reader.onloadend = async function() {
                    const base64data = reader.result.split(',')[1]; 
                    const backendResponse = await fetch('/animate', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ image: base64data, prompt: promptText })
                    });
                    const data = await backendResponse.json();
                    if (data.error) throw new Error(data.error);

                    vidMsg.style.display = 'none';
                    vidPlayer.src = "data:video/mp4;base64," + data.video_b64;
                    vidPlayer.style.display = 'block'; vidPlayer.play().catch(e => console.log("Autoplay blocked"));
                    btnDl.style.display = 'inline-flex';
                }
            } catch (err) {
                vidMsg.innerText = "‚ùå Video Error: " + err.message; vidMsg.style.color = "red";
                btnAnim.style.display = 'inline-flex'; btnDl.style.display = 'inline-flex';
            }
        }

        // --- EVENT LISTENER (FINAL LOGIC) ---
        function handleBotEvent(event) {
            console.log("üîî RAW EVENT:", event);
            const type = (event.payload && event.payload.type) ? event.payload.type : event.type;
            const text = event.text || (event.payload && event.payload.text);

            if (!text) return;

            if (type === 'send_prompt_to_site') {
                const panelRegex = /(Panel \d+:.*?)(?=Panel \d+:|$)/gis;
                const matches = text.match(panelRegex);
                if (matches && matches.length > 0) {
                    matches.forEach((panelBlock, index) => {
                        let displayText = panelBlock.replace(/Panel \d+:\s*/i, '').trim();
                        setTimeout(() => createAndGenerateCard(displayText, index + 1), index * 1000);
                    });
                } else {
                    createAndGenerateCard(text);
                }
            } 
            else if (type === 'send_video_prompt') {
                const panelRegex = /(Panel \d+:.*?)(?=Panel \d+:|$)/gis;
                const matches = text.match(panelRegex);
                const cards = document.querySelectorAll('.output-card');

                if (matches && matches.length > 0) {
                    matches.forEach((panelBlock, index) => {
                        let cleanPrompt = panelBlock.replace(/Panel \d+:\s*/i, '').trim();
                        if (index < cards.length) {
                            const targetCard = cards[index];
                            const promptEl = targetCard.querySelector('.prompt-text');
                            if (promptEl) {
                                const uniqueId = promptEl.id.replace('prompt-', '');
                                const botInput = document.getElementById(`vid-prompt-bot-${uniqueId}`);
                                const botRadio = document.getElementById(`radio-bot-${uniqueId}`);
                                if (botInput) {
                                    botInput.value = cleanPrompt;
                                    if (botRadio) botRadio.checked = true;
                                }
                            }
                        }
                    });
                    showToast(`üé¨ Updated video prompts for all panels!`);
                } else {
                    if (cards.length > 0) {
                        const lastCard = cards[cards.length - 1];
                        const promptEl = lastCard.querySelector('.prompt-text');
                        if (promptEl) {
                            const uniqueId = promptEl.id.replace('prompt-', '');
                            const botInput = document.getElementById(`vid-prompt-bot-${uniqueId}`);
                            const botRadio = document.getElementById(`radio-bot-${uniqueId}`);
                            if (botInput) {
                                botInput.value = text;
                                if (botRadio) botRadio.checked = true;
                                showToast(`üé¨ Bot suggestion applied!`);
                            }
                        }
                    }
                }
            }
        }

        // --- ROBUST INITIALIZATION ---
        function setupBotListeners() {
            const intervalId = setInterval(() => {
                if (window.botpress && window.botpress.on) {
                    window.botpress.on('webchat:ready', () => console.log("ü§ñ Bot Webchat Ready"));
                    window.botpress.on('customEvent', handleBotEvent);
                    clearInterval(intervalId);
                }
            }, 500);
        }

        setupBotListeners();
    </script>
</body>
</html>