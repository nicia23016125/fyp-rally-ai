<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rally AI</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        /* Global Styling */
        body {
            font-family: "Poppins", sans-serif;
            background: url('/images/k.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #333;
        }

        /* Transparent Search Bar */
        .search-bar {
            background: rgba(255, 255, 255, 0.8);
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            margin: 20px auto;
            text-align: center;
            max-width: 600px;
        }

        .search-bar input {
            border-radius: 30px;
            border: 2px solid #cfe4ff;
            padding: 10px;
            width: 70%;
            text-align: center;
        }

        .search-bar button {
            background: #0b3d91;
            color: white;
            border-radius: 30px;
            padding: 10px 20px;
            transition: 0.3s ease-in-out;
            border: none;
        }

        .search-bar button:hover {
            background: #0a3b7d;
        }

        /* Ticket Cards */
        .event-card {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            padding: 20px;
            text-align: center;
            transition: 0.3s;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .event-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        }

        .event-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 10px;
        }

        /* Buttons */
        .btn-custom {
            display: inline-block;
            padding: 10px 20px;
            border-radius: 30px;
            font-weight: bold;
            transition: 0.3s ease-in-out;
            text-decoration: none;
            border: none;
            width: 100%;
        }

        .btn-mint {
            background: #20c997;
            color: white;
        }

        .btn-mint:hover {
            background: #17a589;
        }

        .btn-magenta {
            background: #0b3d91;
            color: white;
        }

        .btn-magenta:hover {
            background: #0a3b7d;
        }

        .btn-pink {
            background: #cfe4ff;
            color: white;
        }

        .btn-pink:hover {
            background: #2b6cb0;
        }

        .text-muted {
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar.ejs') %>

    <div class="container mt-5">
        <!-- Search Bar -->
        <div class="search-bar">
            <h3>Find Events</h3>
            <form class="form-inline d-flex justify-content-center" action="/tickets" method="GET">
                <input type="text" class="form-control w-75 mr-2" name="search" placeholder="Search by Artist, Event" value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
                <button type="submit" class="btn btn-magenta">Search</button>
            </form>
        </div>

        <!-- Admin Add Ticket Button -->
        <% if (session.user && session.user.userRole === "admin") { %>
            <div class="text-right mb-3">
                <a href="/addTicket" class="btn btn-mint">‚ûï Add New Ticket</a>
            </div>
        <% } %>

        <h2 class="text-center mb-4">üéüÔ∏è Available Tickets üéüÔ∏è</h2>

        <% if (tickets.length > 0) { %>
            <div class="row">
                <% tickets.forEach(ticket => { %>
                    <div class="col-md-4 mb-4">
                        <div class="event-card">
                            <img src="/images/<%= ticket.eventImage || 'default.jpg' %>" alt="<%= ticket.eventName %>">
                            <h5 class="mt-3"><%= ticket.eventName %></h5>
                            <p><strong>Price:</strong> $<%= ticket.ticketPrice %></p>
                            <p><strong>Available:</strong> <%= ticket.availableTickets %> left</p>

                            <% if (!session.user) { %>
                                <p class="text-danger">üîí Please log in to add tickets to cart.</p>
                            <% } else if (session.user.userRole === "user") { %>
                                <form action="/addToCart/<%= ticket.ticketId %>" method="POST">
                                    <input type="number" name="ticketQuantityToAdd" value="1" min="1" max="<%= ticket.availableTickets %>" required class="form-control mb-2">
                                    <button type="submit" class="btn btn-pink">Book Now!</button>
                                </form>
                            <% } %>

                            <% if (session.user && session.user.userRole === "admin") { %>
                                <div class="mt-3">
                                    <a href="/editTicket/<%= ticket.ticketId %>" class="btn btn-mint">Edit</a>
                                    <form action="/deleteTicket/<%= ticket.ticketId %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this ticket?');" class="d-inline">
                                        <button type="submit" class="btn btn-magenta">Delete</button>
                                    </form>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p class="text-center text-warning">No matching tickets found. Try searching for something else! üòä</p>
        <% } %>
    </div>
</body>
</html>
