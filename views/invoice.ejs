<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Rally AI</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  
  <style>
    body {
      background-image: url('/images/k.jpg');
      background-size: cover;
      background-position: center;
      font-family: 'Poppins', sans-serif;
      color: #977e7ec0;
    }

    .container {
      background: rgba(255, 255, 255, 0.9);
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.343);
      margin-top: 40px;
      backdrop-filter: blur(10px);
    }

    h2 {
      color: #0b3d91;
      font-weight: bold;
      text-align: center;
    }

    p {
      text-align: center;
      font-size: 16px;
    }

    .table th {
      background: #cfe4ff;
      color: white;
      padding: 15px;
    }

    .table td {
      padding: 12px;
      vertical-align: middle;
    }

    .table-hover tbody tr:hover {
      background: rgba(208, 234, 255, 0.85);
    }

    .payment-buttons {
      display: flex;
      justify-content: center;
      gap: 15px;
      margin-top: 20px;
    }

    .btn-netsqr {
      background-color: #c82333;
      color: white;
      padding: 12px 20px;
      border-radius: 8px;
      font-weight: bold;
      border: none;
      transition: background 0.3s ease;
    }

    .btn-netsqr:hover {
      background-color: #a71d2a;
    }
  </style>
</head>

<body>
  <%- include ('partials/navbar.ejs') %>

  <div class="container">
    <div class="text-center mb-4">
      <h2>ORDER SUMMARY</h2>
      <p><strong>Order ID:</strong> <%= orderId %></p>
      <p><strong>Transaction ID:</strong> <%= transactionId %></p>
    </div>

    <table class="table table-hover text-center">
      <thead>
        <tr>
          <th>Ticket</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>SubTotal</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < cart_items.length; i++) { %>
          <tr>
            <td>
              <%= cart_items[i].eventName %> <br>
              <img src="/images/<%= cart_items[i].eventImage %>" width="80px" height="80px">
            </td>
            <td>$<%= cart_items[i].ticketPrice %></td>
            <td><%= cart_items[i].cartTicketQuantity %></td>
            <td>$<%= (cart_items[i].ticketPrice * cart_items[i].cartTicketQuantity).toFixed(2) %></td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <div class="text-end fw-bold mt-3">
      <h4>Total: $<%= Number(totalAmount).toFixed(2) %></h4>
    </div>

    <div class="payment-buttons">
      <form action="/generateNETSQR" method="POST">
        <input type="hidden" name="cartTotal" value="<%= totalAmount %>">
        <button type="submit" class="btn-netsqr">Pay with NETS</button>
      </form>
      <div id="paypal-button-container"></div>
    </div>
  </div>

  <script src="https://www.paypal.com/sdk/js?client-id=AfYqHTbGyqbvEJ6tYfIJqdalKxhDeBxM0zvQRe51NNE7iaAR03pUMXuG_fOYvsPwcZdouUmGQi_3apbL&components=buttons&currency=SGD"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      paypal.Buttons({
        createOrder: function(data, actions) {
          return actions.order.create({
            purchase_units: [{ amount: { value: "<%= totalAmount %>" } }]
          });
        },
        onApprove: function(data, actions) {
          return actions.order.capture().then(function(details) {
            document.getElementById("result-message").innerHTML = "Transaction completed by " + details.payer.name.given_name;
            window.location.href = `/paypal-success?orderId=<%= orderId %>&transactionId=${details.id}&totalAmount=<%= totalAmount %>`;
          });
        },
        onError: function(err) {
          console.error("PayPal Error:", err);
        }
      }).render('#paypal-button-container');
    });
  </script>
</body>
</html>