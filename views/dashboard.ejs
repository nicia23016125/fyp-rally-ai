<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Dashboard - Rally AI</title>
</head>
<body>
  <%- include('partials/navbar.ejs') %>

  <div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Admin Dashboard</h2>
      <small class="text-muted">Welcome, <strong><%= session.user ? session.user.username : 'Admin' %></strong></small>
    </div>

    <div class="row g-3 mb-4">
      <div class="col-md-3">
        <div class="card p-3">
          <h6>Total Users</h6>
          <h2><%= data.totalUsers %></h2>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card p-3">
          <h6>Total Subscriptions</h6>
          <h2><%= data.totalSubscriptions %></h2>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card p-3">
          <h6>Total Reviews</h6>
          <h2><%= data.totalReviews %></h2>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card p-3">
          <h6>Items in Carts</h6>
          <h2><%= data.totalCartItems %></h2>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Latest Subscriptions</h5>
        <% if (data.latestSubscriptions.length === 0) { %>
          <p class="text-muted">No subscriptions found.</p>
        <% } else { %>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>User ID</th>
                  <th>Plan</th>
                  <th>Status</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% data.latestSubscriptions.forEach(function(t){ %>
                  <tr>
                    <td><%= t.subscription_id %></td>
                    <td><%= t.user_id %></td>
                    <td><%= t.plan_id %></td>
                    <td><%= t.status %></td>
                    <td><a href="/subscription/<%= t.subscription_id %>" class="btn btn-sm btn-outline-primary">View</a></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </div>

  </div>
</body>
</html>
