<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Rally AI</title>
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <style>
    /* Apply full-page background */
    body {
      background-image: url('/images/k.jpg'); /* Correct path */
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    /* Ensure navbar stays at the top */
    .navbar {
      width: 100%;
    }

    /* Center content */
    .content-container {
      flex-grow: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      text-align: center;
    }

    /* Style for content box */
    .container {
      background: rgba(255, 255, 255, 0.85); /* Light background for readability */
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    }

    /* Error message styling */
    .alert {
      margin-top: 15px;
    }
    h1 {
      color:red;
    }
  </style>
</head>
<body>

  <!-- Navbar remains at the top -->
  <%- include ('partials/navbar.ejs') %>

  <!-- Centered content -->
  <div class="content-container">
    <div class="container">
      <h1>Only for Admins</h1>

      <% if (errors && errors.length > 0) { %>
        <div class="alert alert-danger">
          <% errors.forEach(function(error) { %>
            <p><%= error %></p>
          <% }); %>
        </div>
      <% } %>

    </div>
  </div>

</body>
</html>
