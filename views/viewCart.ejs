<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rally AI</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    
    <style>
        /* Page Styling */
        body {
            font-family: 'Poppins', sans-serif;
            background: url('/images/k.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #333;
        }

        .container {
            background: rgba(255, 255, 255, 0.85); /* Slight transparency */
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            margin-top: 40px;
            max-width: 900px; /* Wider container */
        }

        h2 {
            color: #0b3d91;
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
        }

        /* Table Styling */
        .table {
            background: #f0f6ff;
            border-radius: 10px;
            overflow: hidden;
        }

        .table th {
            background: #cfe4ff;
            color: white;
            padding: 15px;
            font-size: 18px;
            text-align: center;
        }

        .table td {
            padding: 15px;
            vertical-align: middle;
            text-align: center;
        }

        /* Image Styling */
        .ticket-img {
            width: 75px;
            height: 75px;
            border-radius: 10px;
            object-fit: cover;
            border: 2px solid #0b3d91;
        }

        /* Quantity Input & Buttons */
        .quantity-form {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .quantity-form input {
            width: 60px;
            text-align: center;
            border: 1px solid #0b3d91;
            border-radius: 5px;
            padding: 5px;
        }

        .btn-update {
            background: #0b3d91;
            border: none;
            color: white;
            padding: 8px 10px;
            border-radius: 5px;
            font-size: 14px;
        }

        .btn-update:hover {
            background: #0a3b7d;
        }

        .btn-remove {
            background: #2b6cb0;
            border: none;
            padding: 8px 10px;
            font-size: 14px;
        }

        .btn-remove:hover {
            background: #1f5b8a;
        }

        .btn-checkout {
            background: #20c997;
            border: none;
            padding: 12px 20px;
            font-size: 16px;
            font-weight: bold;
            border-radius: 8px;
        }

        .btn-checkout:hover {
            background: #17a589;
        }

        /* Total Amount */
        .total-text {
            font-size: 22px;
            font-weight: bold;
            color: #0b3d91;
            text-align: right;
            margin-top: 20px;
        }

        .text-center {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar.ejs') %>

    <div class="container">
        <h2>ðŸ›’ Shopping Cart</h2>

        <% if (!session.user || session.user.userRole === "admin") { %>
            <div class="cart-message">ðŸš« Only for users</div>
        
        <% } else if (cart_items && cart_items.length > 0) { %>
            <table class="table text-center">
                <thead>
                    <tr>
                        <th>Event</th>
                        <th>Image</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% cart_items.forEach(item => { %>
                        <tr>
                            <td><%= item.eventName %></td>
                            <td>
                                <img src="/images/<%= item.eventImage || 'default.png' %>" class="ticket-img">
                            </td>
                            <td>$<%= parseFloat(item.ticketPrice).toFixed(2) %></td>
                            <td>
                                <form action="/updateCartTicket/<%= item.ticketId %>" method="POST" class="quantity-form">
                                    <input type="number" name="cartTicketQuantity" value="<%= item.cartTicketQuantity %>" min="1" required>
                                    <button type="submit" class="btn btn-sm btn-update">Update</button>
                                </form>
                            </td>
                            <td>$<%= (item.ticketPrice * item.cartTicketQuantity).toFixed(2) %></td>
                            <td>
                                <a href="/removeFromCart/<%= item.ticketId %>" class="btn btn-danger btn-sm btn-remove">Remove</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>

            <h4 class="total-text">Total: $<%= (Number(totalAmount) || 0).toFixed(2) %></h4>

            <div class="text-center">
                <form action="/checkout" method="POST">
                    <input type="hidden" name="totalAmount" value="<%= totalAmount %>">
                    <button type="submit" class="btn btn-checkout">Proceed to Checkout</button>
                </form>
            </div>

        <% } else { %>
            <div class="cart-message text-center">ðŸ˜¢ Your cart is empty</div>
        <% } %>
    </div>
</body>
</html>
