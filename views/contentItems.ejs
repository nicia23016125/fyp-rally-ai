<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Content Items - Admin</title>
</head>
<body>
  <%- include('partials/navbar.ejs') %>

  <div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2>Content Items</h2>
      <a href="/admin/content/create" class="btn btn-primary btn-sm">Create New</a>
    </div>

    <% if (!items || items.length === 0) { %>
      <div class="alert alert-info">No content items found.</div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>ID</th>
              <th>Title</th>
              <th>Platform</th>
              <th>Status</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% items.forEach(function(it){ %>
              <tr>
                <td><%= it.contentId %></td>
                <td><%= it.contentTitle %></td>
                <td><%= it.platform %></td>
                <td><%= it.status %></td>
                <td><a href="/admin/content/edit/<%= it.contentId %>" class="btn btn-sm btn-outline-secondary">Edit</a></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>
</body>
</html>